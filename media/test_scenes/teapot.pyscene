# Create materials

box = Material('Box')
box.baseColor = float4(0.9, 0.6, 0.4, 1.0)
box.roughness = 0.5

# Create geometry

teapotMesh = TriangleMesh.createFromFile('meshes/teapot.obj')

# Create mesh instances

sceneBuilder.addMeshInstance(
    sceneBuilder.addTriangleMesh(teapotMesh, box),
    sceneBuilder.addNode('Teapot', Transform(scaling=float3(0.4, 0.4, 0.4), translation=float3(0.1, 0.1, -0.5), rotationEulerDeg=float3(0, 20, 0)))
)

# Create env map

sceneBuilder.envMap = EnvMap('envmaps/envmap.exr')

# Create camera

camera = Camera()
camera.position = float3(0, 0.6, 1.375)
camera.target = float3(0, 0.5, 0)
camera.up = float3(0, 1, 0)
sceneBuilder.addCamera(camera)
